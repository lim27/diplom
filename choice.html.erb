        <% if predloj.empty? %>
        <% else %>
            <%= form_tag do %>
                <% @idverb=verb.id.to_i %>

                <% predloj.each do |znach|
                  @predloj=@predloj + predloj %> <!-- Перебор предложений, в которых есть глаголы -->
                    <tr> <td> <%= znach.to_s %> </td>
