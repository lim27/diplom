                         @right_text=rightword
                         phrase_right=@phrase.to_s + " " + rightword.join(" ")
                         @const_right=/#{phrase_right}/
                         @const_verb=/#{@phrase}/
                         @verb_mot=@phrase.split(' ')
                      %>
                      <% rightword %>

                      <% array_pred=predloj.grep(@const_right) %> <% array_verb=predloj.grep(@const_verb) %>
                      <% @chislo_verb=array_verb.length %>
                      <% @chislo=array_pred.length %>


                    </tr>



                <% end %>


            <% end %>
        <% end %>

    <% end %>
  <table>
    <tr> <td> Статистика обновлена</td></tr>
    <tr> <td class="td_but"> <%= link_to "Далее", {:action=>"upload",
                                                                 :chislo_verb=>@chislo_verb, :verb_phrase => @phrase,
                                                                 :verb_mot => @verb_mot, :id_verb => @idverb,
                                                                 :righttext => @right_text, :chislo => @chislo } %> </td> </tr>


  </table>
</div>